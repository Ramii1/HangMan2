<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.ramyar.hangman.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/forkert6"
        android:id="@+id/imageView3"
        android:layout_height="200dp"
        android:layout_marginTop="90dp"
        android:saveEnabled="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="HANGMAN"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:shadowColor="#2b3131"

            android:shadowRadius="12"
            android:textSize="64sp"
            android:textAlignment="center"
            android:textStyle="normal|bold|italic"
            android:textColorLink="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:paddingTop="220dp">

            <Button
                android:text="singelplayer"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spilBtn"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" />

            <Button
                android:text="multiplayer"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/multiBtn" />

            <Button
                android:text="High Score"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/highScoreBtn" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container">

    </FrameLayout>

</RelativeLayout>
